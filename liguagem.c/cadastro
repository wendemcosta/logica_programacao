#include<stdio.h>// Online C compiler to run C program online
#include <string.h>

int main() {
 char nome[20];
 char apelido[10];
 int idade;
 float altura;
 printf("insira seu nome completo:");
 fgets(nome,sizeof(nome),stdin);
 
 printf("insira seu apelido:");
 fgets(apelido,sizeof(apelido),stdin);
 
 printf("insira sua idade;");
 scanf("%d",&idade);
 
 printf("insira sua altura:");
 scanf("%f",&altura);
  
  printf("\nOla, %s. voce tem %d anos, seu apelido é: %s e sua altura é: %.2f", nome, idade, apelido ,altura);
    


    return 0;
}